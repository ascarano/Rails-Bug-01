<h1>Pithy quotes</h1>

<% @quotes.each do |quote| %>
  <section class="quote-container">
    <blockquote class="quote">
      <%= quote.text %>
      <footer class="author">
        <%= quote.author %>
      </footer>
    </blockquote>
    <div class="created">
      <% Rails.logger.debug(quote.created_at.inspect) %>
      <% if quote.created_at == nil %>
      <div></div>
      <% else %>
      <%= time_ago_in_words(quote.created_at) %> ago
      <% end %>
    </div>
  </section>
<% end %>
